{% extends 'layout.html.twig' %}

{% block title %} parent() {% endblock %} 




{% block content %}
<h1 class="text-center">-Liste des voitures-</h1>
<table class="table text-center">
<thead class="thead-dark">
                <tr>
                    <th>titre</th>
                    <th>marque</th>
                    <th>modele</th>
                    <th>description</th>
                    <th>photo</th>
                    <th>prix journalier</th>
                </tr>
            </thead>
{% for voiture in voitures %}





<tr>
<td>{{voiture.titre}}</td>
<td>v{{voiture.marque}}</td>
<td>{{voiture.modele}}</td>
<td>{{voiture.description}}</td>
<td>{{voiture.photo}}</td>
<td>{{voiture.prixJournalier}}</td>
<td>
<a href="{{ path("une_voiture", {id: voiture.id} ) }}"><i class="fas fa-eye mx-1"></i></a>
<a href="{{ path("maj_voiture", {id: voiture.id} ) }}"><i class="fas fa-edit mx-1 text-success"></i></a>
<a href="{{ path("supprim_voiture", {id: voiture.id} ) }}"><i class="fas fa-trash mx-1 text-danger" onclick="return confirm('êtes vous sûr de vouloir supprimer votre voiture ?') " ></i></a>
</td>

</tr>
{% endfor %}
</table>


{% endblock %}